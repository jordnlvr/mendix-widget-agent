{
  "$schema": "../widget-config-schema.json",
  "name": "StatusIndicator",
  "displayName": "Status Indicator",
  "description": "Shows a colored status dot with label",
  "category": "Display",
  "company": "blueprintmx",
  "author": "Kelly Seale",
  "needsEntityContext": false,

  "properties": [
    {
      "key": "status",
      "type": "enumeration",
      "caption": "Status",
      "description": "Current status to display",
      "defaultValue": "neutral",
      "options": [
        { "key": "success", "caption": "Success" },
        { "key": "warning", "caption": "Warning" },
        { "key": "error", "caption": "Error" },
        { "key": "neutral", "caption": "Neutral" }
      ]
    },
    {
      "key": "label",
      "type": "textTemplate",
      "caption": "Label",
      "description": "Text to show next to indicator",
      "required": false
    },
    {
      "key": "showLabel",
      "type": "boolean",
      "caption": "Show label",
      "description": "Whether to display the label",
      "defaultValue": true
    }
  ],

  "events": [
    {
      "key": "onClick",
      "caption": "On click",
      "description": "Action when indicator is clicked"
    }
  ],

  "systemProperties": ["Name", "Visibility", "TabIndex"]
}
